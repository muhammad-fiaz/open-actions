{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",                  // Use the latest ECMAScript features
    "module": "ESNext",                  // Output as ES modules
    "moduleResolution": "node",          // Resolve modules in a Node-like manner
    "jsx": "react-jsx",                  // Support JSX for React
    "allowJs": true,                     // Allow JavaScript files
    "allowImportingTsExtensions": false,  // Allow importing TypeScript files
    "declaration": true,                 // Generate .d.ts declaration files
    "declarationMap": true,              // Generate .d.ts.map files for debugging
    "sourceMap": true,                   // Generate .map files for debugging
    "noEmit": false,                     // Emit output files
    "strict": true,                      // Enable all strict type-checking options
    "skipLibCheck": true,                // Skip type checking of declaration files
    "noFallthroughCasesInSwitch": true,  // Report errors for fallthrough cases in switch statements
    "noUnusedLocals": false,             // Disable reporting of unused local variables
    "noUnusedParameters": false,         // Disable reporting of unused parameters
    "noPropertyAccessFromIndexSignature": false, // Allow property access via index signature
    "outDir": "./dist"                   // Output directory for compiled files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
