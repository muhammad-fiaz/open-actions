{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],                  // Include ESNext and DOM library types
    "target": "ESNext",                        // Use the latest ECMAScript features
    "module": "ESNext",                        // Output as ES modules
    "moduleResolution": "node",                // Resolve modules in a Node-like manner
    "jsx": "react-jsx",                        // Support JSX for React
    "allowJs": true,                           // Allow JavaScript files
    "allowSyntheticDefaultImports": true,      // Allow default imports from modules without default exports
    "declaration": true,                       // Generate .d.ts declaration files
    "declarationMap": true,                    // Generate .d.ts.map files for debugging
    "sourceMap": true,                         // Generate .map files for debugging
    "outDir": "./dist",                        // Output directory for compiled files
    "strict": true,                            // Enable all strict type-checking options
    "skipLibCheck": true,                      // Skip type checking of declaration files
    "noFallthroughCasesInSwitch": true,        // Report errors for fallthrough cases in switch statements
    "noUnusedLocals": true,                    // Report errors for unused local variables
    "noUnusedParameters": true,                // Report errors for unused parameters
    "noPropertyAccessFromIndexSignature": true, // Report errors for property access via index signature
    "esModuleInterop": true,                   // Emit additional helpers for better interop with CommonJS
    "forceConsistentCasingInFileNames": true   // Ensure file names are consistent across imports
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
